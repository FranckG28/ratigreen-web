datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  id      Int      @id @default(autoincrement())
  title   String
  choices Choice[]
  answer  String
}

// enum Indicator {
