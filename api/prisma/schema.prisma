model Indicator {
  id                   Int                    @id @default(autoincrement())
  title                String                 @unique
  IndicatorCoefficient IndicatorCoefficient[]
}

model Choice {
  id                     Int                  @id @default(autoincrement())
  text                   String
  indicatorCoefficient   IndicatorCoefficient @relation(fields: [indicatorCoefficientId], references: [id])
  question               Question             @relation(fields: [questionId], references: [id])
  questionId             Int
  indicatorCoefficientId Int
}

model IndicatorCoefficient {
  id          Int       @id @default(autoincrement())
  indicator   Indicator @relation(fields: [indicatorId], references: [id])
  indicatorId Int
  coefficient Float
  Choice      Choice[]
}
